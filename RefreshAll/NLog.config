<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="myvar" value="myvalue"/>

  <targets>
    <target name="logfile" xsi:type="File" fileName="Log.txt" />
    <target name="email" 
            xsi:type="Mail"
            subject="Consignment Pack Processing: ERROR"
            to="accountservices@spinalelements.com"
            bcc="jdriggers@sixspartners.com"
            cc=""
            from="ConsignmentPackProcessing@spinalelements.com"
            body="${message}${newline}"
            addNewLines="true"
            smtpUserName="username"
            smtpPassword="password"
            smtpAuthentication="Basic"
            smtpServer="Layout"
            smtpPort="25"
            enableSsl="false"
            timeout="20000"/>
    <target xsi:type="ColoredConsole" name="console" layout="${uppercase:${level}}: ${message}"/>
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
    <logger name="*" minlevel="Info" writeTo="logfile"/>
    <logger name="*" minlevel="Info" writeTo="email"/>
    <logger name="*" minlevel="Info" writeTo="console"/>
  </rules>
</nlog>
